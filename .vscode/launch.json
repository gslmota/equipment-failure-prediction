{
    // .vscode/launch.json
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug FastAPI (Uvicorn)",
        "type": "python",
        "request": "launch",
        "module": "uvicorn",
        "args": [
          "api.main:run",     // caminho para sua app
          "--reload",         // auto-reload em mudanças
          "--port", "8000"
        ],
        "jinja": true,         // útil se usar templates
        "env": {
          "PYTHONPATH": "${workspaceFolder}"  
        }
      }
    ]
  }
  